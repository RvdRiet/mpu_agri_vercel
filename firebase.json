{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "*.md",
      "server.js",
      "server.ps1",
      "package.json",
      "package-lock.json"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico|webp|svg|js|css|woff2)",
        "headers": [{ "key": "Cache-Control", "value": "max-age=31536000" }]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
